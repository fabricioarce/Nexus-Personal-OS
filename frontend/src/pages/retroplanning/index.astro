<Layout title="Working Backwards - Proyectos">
    <div class="flex h-screen bg-background text-foreground overflow-hidden">

        <main class="flex-1 flex flex-col overflow-hidden">
            <!-- Header -->
            <header
                class="h-16 border-b border-border flex items-center justify-between px-8 bg-card/50 backdrop-blur-md"
            >
                <div class="flex items-center gap-4">
                    <h1
                        class="text-xl font-semibold bg-gradient-to-r from-blue-500 to-indigo-500 bg-clip-text text-transparent"
                    >
                        Working Backwards
                    </h1>
                </div>
                <button
                    id="new-project-btn"
                    class="bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-xl text-sm font-medium transition-all shadow-lg shadow-blue-500/20 active:scale-95"
                >
                    + Nuevo Proyecto
                </button>
            </header>

            <div class="flex-1 overflow-y-auto p-8">
                <div
                    id="projects-grid"
                    class="max-w-6xl mx-auto grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6"
                >
                    <!-- Projects will be injected here -->
                    <div
                        class="col-span-full flex flex-col items-center justify-center py-20 text-muted-foreground"
                    >
